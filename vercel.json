{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/v1/:path*",
      "dest": "https://maharashtra-events-backend.onrender.com/api/v1/:path*"
    },
    {
      "src": "/admin-login",
      "dest": "/admin-login"
    },
    {
      "src": "/admin/dashboard",
      "dest": "/admin/dashboard"
    },
    {
      "src": "/:path*",
      "dest": "/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/api/v1/:path*",
      "destination": "https://maharashtra-events-backend.onrender.com/api/v1/:path*"
    },
    {
      "source": "/admin-login",
      "destination": "/admin-login"
    },
    {
      "source": "/admin/dashboard",
      "destination": "/admin/dashboard"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ]
}
